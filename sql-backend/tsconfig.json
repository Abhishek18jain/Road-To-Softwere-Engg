{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    "types": ["node"],
    "lib": ["ES2022"],

    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "sourceMap": true
  },
  "include": ["src"]
}
